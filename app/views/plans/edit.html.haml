#plan__edit{class: "p-5 container"}
  .back__btn
    = link_to "戻る", :back, class: 'mb-3 btn btn-primary text-left'
  %h3{class: "font-weight-bold"} 予定の編集
  = form_with model: [@calendar,@plan], id: "plan__form--edit", local: true do |f|
    -if @plan.errors.any?
      = render "plans/error_messages"
    .formField{class: "mb-3"}
      .formField__input
        = f.text_field :title, class: 'form-control'

    .formField{class: "mb-3 d-flex justify-content-start"}
      .formField__startDay
        .formField__input
          = f.date_field :start_day
      .form__connect{class: "mx-2"}
        &sim;
      .formField__endDay
        .formField__input
          = f.date_field :end_day

    .formField{class: "mb-3 d-flex justify-content-start"}
      .formField__startTime
        .formField__input
          = f.time_field :start_time
      .form__connect{class: "mx-4"}
        &sim;
      .formField__endTime
        .formField__input
          = f.time_field :end_time

    .formField{class: "mb-3 d-flex justify-content-around"}
      .formField__content
        .formField__label
          = f.label :content, '内容'
        .formField__input
          = f.text_area :content, size: "50×40", class: "form-control"

    .formSubmit{class: "text-left"}
      = f.submit "更新", class: 'btn btn-primary plan__submit'