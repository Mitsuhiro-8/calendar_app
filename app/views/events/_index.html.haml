%h6.event 予定リスト
.side__events
  .event__list
    - @events.order(:start_day).order(:start_hour).each do |event|
      .event__container
        = link_to '', edit_calendar_event_path(event.calendar_id, event.id), class: "link__front"
        .event__top
          .event__title
            = event.title
          .event__done
            = link_to calendar_event_path(event.calendar_id, event.id), method: :delete, class: "event__done--btn" do
              =icon('fas', 'check-square')
        .event__day
          .event__startDay
            = event.start_day.strftime("%m/%d")
          .bar &sim;
          - if event.end_day
            .event__endDay
              = event.end_day.strftime("%m/%d")
        .event__time
          .event__startTime
            = event.start_hour.strftime("%H:%M")
          .bar &sim;
          - if event.end_hour
            .event__endTime
              = event.end_hour.strftime("%H:%M")
        .user_name
          = event.user.name + " さんの予定"