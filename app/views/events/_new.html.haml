#mask.hidden
#event.hidden
  .event__contents
    .close__btn
      %butto#event__close--new
        =icon('fas', 'window-close')
    %h3 予定の作成
    = form_with model: [@calendar, @event], id: "event__form--new", local: true do |f|
      -if @event.errors.any?
        = render "events/error_messages"
      .formField
        = f.text_field :title, placeholder: 'タイトルを入力してください'

      .formField
        .formField__day
          = f.date_field :start_day
        .form__connect
          &sim;
        .formField__day
          = f.date_field :end_day

      .formField
        .formField__time
          = f.time_field :start_hour
        .form__connect
          &sim;
        .formField__time
          = f.time_field :end_hour

      .formField__noFlex
        .formField__content
          .formField__label
            = f.label :content, '【内容】'
          .formField__input
            = f.text_area :content

      .formSubmit{class: "text-left"}
        = f.submit "登録", class: 'event__submit'