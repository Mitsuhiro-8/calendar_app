.AccountPage
  .AccountPage__title
    %h3 アカウントの作成
    = render "devise/shared/links"
  .AccountPage__form
    = form_for(@user, url: user_registration_path) do |f|
      = render "devise/shared/error_messages", resource: @user
      .FormField
        .FormField__label
          = f.label :name, '名前'
        .FormField__input
          = f.text_field :name
      .FormField
        .FormField__label
          = f.label :email ,'メールアドレス'
        .FormField__input
          = f.email_field :email, placeholder: 'sample@gmail.com'
      .FormField
        .FormField__label
          = f.label :password
          %i (英数字7文字以上)
        .FormField__input
          = f.password_field :password, autocomplete: 'off'
      .FormField
        .FormField__label
          = f.label :password_confirmation
        .FormField__input
          = f.password_field :password_confirmation, autocomplete: 'off'
      .actions
        = f.submit "アカウント作成"