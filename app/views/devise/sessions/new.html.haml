.AccountPage
  .AccountPage__title
    %h3 ログイン
    = render "devise/shared/links"
  .AccountPage__form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .FormField
        .FormField__label
          = f.label :email, 'メールアドレス'
        .FormField__input
          = f.email_field :email, autofocus: true
        .FormField
          .FormField__label
            = f.label :password
            %i (英数字8文字以上)
          .FormField__input
            = f.password_field :password, autocomplete: "off"
        .actions
          = f.submit "ログイン"
